{
  "name": "flight-h5-ssr",
  "description": "flight H5 website",
  "version": "1.0.0",
  "author": "yfdai <1410439635@qq.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "start": "npm run build && npm run start-server",
    "build": "npm run build-client && npm run build-server",
    "build-client": "cross-env NODE_ENV=production webpack --config webpack.client.config.js --progress --hide-modules",
    "build-server": "cross-env NODE_ENV=production webpack --config webpack.server.config.js --progress --hide-modules",
    "start-server": "node server.js",
    "lint": "eslint app/**/*.{js,vue}",
    "test": "mocha-webpack --webpack-config webpack.base.config.js --require test/setup.js test/**/*.spec.js",
    "test-ci": "mocha-webpack --webpack-config webpack.config-test.js  --require test/setup.js test/**/*.spec.js",
    "cover": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run test-ci",
    "test2": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha-webpack --webpack-config webpack.config-test.js --require test/setup.js test/**/*.spec.js"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "docs/*"
    ],
    "delay": "2500"
  },
  "nyc": {
    "include": [
      "src/**/*.(js|vue)"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "dependencies": {
    "axios": "^0.18.0",
    "es6-promise": "^4.2.4",
    "express": "^4.16.3",
    "http-proxy-middleware": "^0.18.0",
    "jquery": "^3.3.1",
    "vue": "^2.5.21",
    "vue-axios": "^2.1.1",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.21",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "webpack-merge": "^4.1.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.16",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-vue": "^4.5.0",
    "expect": "^23.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jsdom": "^11.11.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "nyc": "^11.8.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.28.2",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-node-externals": "^1.7.2"
  }
}
